            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parentSubText" text="WHOHAS_SUBTEXT" inherits="GameFontHighlightSmall" nonspacewrap="true" maxLines="3" justifyH="LEFT" justifyV="TOP">
